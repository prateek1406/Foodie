                img_div.setAttribute("style","text-align:center;");
                var img=document.createElement('img');
                img.setAttribute('src',"img/user.svg");
                img.setAttribute("style","width:60px;height:60px;margin:20px auto;");
                img_div.appendChild(img);
                var comment=document.createElement('div');
                comment.setAttribute("class","col-8");
                comment.setAttribute("style","font-size:15px;margin:20px auto;");
                var data4=document.createTextNode(array[i]);
                comment.appendChild(data4);
                row1.appendChild(img_div);
                row1.appendChild(comment);
                detail.appendChild(row1);
                col.appendChild(detail);
                row.appendChild(col);
                
                }
