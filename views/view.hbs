            container.setAttribute("class","container-fluid");
            var row=document.createElement('div');
            row.setAttribute("class","row");
            let l=(data.comments).length;
            let array=data.comments;
            console.log(array);
            for(var i=0;i<l;i++)
            {
                var col=document.createElement('div');
                col.setAttribute("class","col-lg-4 col-md-6 col-sm-6 col-xs-12");
                var detail=document.createElement('div');
                detail.setAttribute("class","details");
                detail.setAttribute("style","width:auto;height:100px;margin:10px auto;");
                var row1=document.createElement('div');
                row1.setAttribute("class","row");
                var img_div=document.createElement('div');
